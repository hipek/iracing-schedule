template(name="homeShow")
  +contentFor "headerButtonLeft"
    button(class="button button-clear pull-left" data-ion-menu-toggle="left")
      +ionIcon icon="navicon"

  +contentFor "headerTitle"
    h1(class="title") iSchedule

  +ionView
    +ionSubheaderBar
      h2(class="title") Teams

    +ionContent
      +ionList
        each teams
          +ionItem route="mySeries" data=getMySeries iconLeft=true iconRight=true
            +ionIcon icon="ios-paper" class="positive"
            = name
            +ionIcon icon="ios-arrow-right"

    +ionFooterBar class="bar-royal"
      h1(class="title") Season
