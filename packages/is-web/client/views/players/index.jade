template(name='playersIndex')
  .row
    .col-md-12
      h1 Players

  .row
    .col-md-12
      table
        thead
          tr
            th Name
            th Nickname
            th Tracks
            th Series
            th Actions
        tbody
          each players
            tr
              td= name
              td= nickname
              td {{countTracks tracks}}
              td {{countPlayerSeries nickname }}
              td
                +linkTo route='playerTracks' nickname=nickname tid=currentTeamId
                  | Add my tracks
                | |
                a(href='#' data-nickname=nickname data-action='addSeries') Add my series
